
if (global.shop) exit;

var hor, ver;
hor = (keyboard_check(ord("D")) || keyboard_check(vk_right))-(keyboard_check(ord("A")) || keyboard_check(vk_left));
ver = (keyboard_check(ord("S")) || keyboard_check(vk_down))-(keyboard_check(ord("W")) || keyboard_check(vk_up));

hsp = hor*moveSpeed;
vsp = ver*moveSpeed;

x += hsp;
y += vsp;
